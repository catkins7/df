<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/black_gold_background"
    android:padding="@dimen/default_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_stats_image_row_image_view"
        android:background="@drawable/default_background_border"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="29dp"
        android:layout_height="22dp"
        android:contentDescription="statsImageView" />

    <TextView
        android:id="@+id/view_stats_image_row_title_text_view"
        android:textSize="@dimen/font_size_medium"
        android:textColor="@color/off_gray"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/view_stats_image_row_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_height_medium" />

</RelativeLayout>