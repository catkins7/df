<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_match_summary_top_layout"
        android:background="@drawable/off_black_background"
        android:padding="@dimen/default_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_match_summary_radiant_kills_text_view"
            android:paddingLeft="@dimen/match_top_text_left_right_padding"
            android:paddingRight="@dimen/match_top_text_left_right_padding"
            android:gravity="center_vertical"
            android:textColor="@color/off_white"
            android:textSize="@dimen/font_size_huge"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_view_height_huge"/>

        <TextView
            android:id="@+id/fragment_match_summary_team_kills_divider"
            android:layout_toRightOf="@id/fragment_match_summary_radiant_kills_text_view"
            android:gravity="center_vertical"
            android:text="@string/match_result_summary_kills_divider_text"
            android:textColor="@color/off_gray"
            android:textSize="@dimen/font_size_huge"
            android:layout_width="@dimen/match_summary_team_divider_width"
            android:layout_height="@dimen/text_view_height_huge"/>

        <TextView
            android:id="@+id/fragment_match_summary_dire_kills_text_view"
            android:paddingLeft="@dimen/match_top_text_left_right_padding"
            android:paddingRight="@dimen/match_top_text_left_right_padding"
            android:layout_toRightOf="@id/fragment_match_summary_team_kills_divider"
            android:gravity="center_vertical"
            android:textColor="@color/off_white"
            android:textSize="@dimen/font_size_huge"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_view_height_huge"/>

        <TextView
            android:id="@+id/fragment_match_summary_victory_text_view"
            android:paddingLeft="@dimen/match_top_text_left_right_padding"
            android:paddingRight="@dimen/match_top_text_left_right_padding"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/font_size_huge"
            android:textColor="@color/off_white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_view_height_huge"/>

        <TextView
            android:text="@string/match_summary_duration_ph"
            android:id="@+id/fragment_match_summary_duration_text_view"
            android:layout_alignParentRight="true"
            android:layout_below="@id/fragment_match_summary_victory_text_view"
            android:layout_marginTop="@dimen/default_padding"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/off_white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_view_height_medium"/>

        <TextView
            android:text="@string/match_summary_mode_ph"
            android:id="@+id/fragment_match_summary_match_type_text_view"
            android:layout_below="@id/fragment_match_summary_victory_text_view"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:layout_toLeftOf="@id/fragment_match_summary_duration_text_view"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/off_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_view_height_medium"/>

        <TextView
            android:text="@string/match_summary_item_of_the_game_label"
            android:id="@+id/fragment_match_summary_item_of_the_game_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/fragment_match_summary_match_type_text_view"
            android:layout_marginTop="@dimen/default_padding"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/off_gray"
            android:layout_width="@dimen/match_summary_of_the_game_width"
            android:layout_height="@dimen/text_view_height_medium"/>

        <ImageView
            android:id="@+id/fragment_match_summary_item_of_the_game_image_view"
            android:background="@drawable/default_background_border"
            android:padding="1dp"
            android:layout_below="@id/fragment_match_summary_match_type_text_view"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_toRightOf="@id/fragment_match_summary_item_of_the_game_label"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_view_height_medium" />

        <TextView
            android:text="@string/match_summary_time_ago_ph"
            android:id="@+id/fragment_match_summary_time_ago_text_view"
            android:layout_alignParentRight="true"
            android:layout_below="@id/fragment_match_summary_duration_text_view"
            android:layout_toRightOf="@id/fragment_match_summary_item_of_the_game_image_view"
            android:layout_marginTop="@dimen/default_padding"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/off_white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_view_height_medium"/>

        <TextView
            android:text="@string/match_summary_player_of_the_game_label"
            android:id="@+id/fragment_match_summary_player_of_the_game_label"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/fragment_match_summary_item_of_the_game_label"
            android:layout_marginTop="@dimen/default_padding"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/off_gray"
            android:layout_width="@dimen/match_summary_of_the_game_width"
            android:layout_height="@dimen/text_view_height_medium"/>

        <TextView
            android:id="@+id/fragment_match_summary_player_of_the_game_text_view"
            android:layout_below="@id/fragment_match_summary_item_of_the_game_label"
            android:layout_toRightOf="@id/fragment_match_summary_player_of_the_game_label"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginLeft="@dimen/default_padding"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/off_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_view_height_medium"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/fragment_match_summary_players_list_view"
        android:layout_below="@id/fragment_match_summary_top_layout"
        android:scrollbars="none"
        android:paddingTop="@dimen/default_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>