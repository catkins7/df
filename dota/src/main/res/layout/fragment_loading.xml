<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:padding="@dimen/default_padding"
        android:background="@drawable/off_white_background"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_loading_info_text_view"
            android:text="@string/loading_text"
            android:textColor="@color/off_black"
            android:textSize="@dimen/font_size_medium"
            android:layout_width="@dimen/loading_bar_width"
            android:layout_height="@dimen/text_view_height_medium"/>

        <FrameLayout
            android:id="@+id/fragment_loading_percent_frame_layout"
            android:background="@drawable/black_green_background"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_below="@id/fragment_loading_info_text_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_height_medium"/>

    </RelativeLayout>
</RelativeLayout>