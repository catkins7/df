<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/default_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/view_statistics_subtitle_row_text_view"
        android:textSize="@dimen/font_size_medium"
        android:textColor="@color/off_gray"
        android:gravity="center_vertical|right"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:layout_width="120dp"
        android:layout_height="@dimen/text_view_height_medium" />

    <TextView
        android:id="@+id/view_statistics_title_row_text_view"
        android:textSize="@dimen/font_size_medium"
        android:textColor="@color/off_gray"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_toLeftOf="@id/view_statistics_subtitle_row_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_height_medium" />

</RelativeLayout>