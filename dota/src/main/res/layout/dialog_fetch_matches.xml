<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/off_black_background"
    android:padding="@dimen/default_padding"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_fetch_matches_text_view"
        android:text="@string/player_summary_fetch_all_dialog_fetching_match_list_text"
        android:textColor="@color/off_white"
        android:textSize="@dimen/font_size_medium"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_height_medium" />

    <FrameLayout
        android:id="@+id/dialog_fetch_matches_percent_frame_layout"
        android:background="@drawable/black_green_background"
        android:layout_marginTop="@dimen/default_padding"
        android:layout_below="@id/dialog_fetch_matches_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_height_medium"/>

</RelativeLayout>