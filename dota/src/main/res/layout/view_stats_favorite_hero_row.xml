<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/default_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_stats_favorite_hero_row_icon_image_view"
        android:layout_width="@dimen/hero_image_width"
        android:layout_height="@dimen/hero_image_height" />

    <ImageView
        android:id="@+id/view_stats_favorite_hero_item_2"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/player_stats_item_row_width"
        android:layout_height="@dimen/player_stats_item_row_height" />

    <ImageView
        android:id="@+id/view_stats_favorite_hero_item_1"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_toLeftOf="@id/view_stats_favorite_hero_item_2"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/player_stats_item_row_width"
        android:layout_height="@dimen/player_stats_item_row_height" />

    <ImageView
        android:id="@+id/view_stats_favorite_hero_item_0"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_toLeftOf="@id/view_stats_favorite_hero_item_1"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/player_stats_item_row_width"
        android:layout_height="@dimen/player_stats_item_row_height" />

    <TextView
        android:id="@+id/view_stats_favorite_hero_row_text_view"
        android:layout_toRightOf="@id/view_stats_favorite_hero_row_icon_image_view"
        android:layout_toLeftOf="@id/view_stats_favorite_hero_item_0"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_centerInParent="true"
        android:gravity="center_vertical|left"
        android:textColor="@color/off_white"
        android:textSize="@dimen/font_size_small"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_height_small" />

</RelativeLayout>